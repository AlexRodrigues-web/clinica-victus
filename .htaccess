Options -Indexes
Options -MultiViews

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /clinica-victus/

  # /api -> backend/index.php
  RewriteRule ^api/?$ backend/index.php [QSA,L]

  # /api/login -> backend/index.php?rota=login
  RewriteRule ^api/(.+)$ backend/index.php?rota=$1 [QSA,L]

  # Deixe arquivos reais passarem
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]
</IfModule>